{
  "extends": "airbnb",
  "rules": {
    "max-len": [
      1,
      120,
      2,
      {
        "ignoreComments": true
      }
    ],
    "quote-props": [
      1,
      "as-needed"
    ],
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "radix": 0,
    "space-infix-ops": 0,
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "default-case": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "quotes": 0,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "function-paren-newline": [
      "error",
      "never"
    ],
    "comma-dangle": 0,
    "prefer-destructuring": 0,
    "no-restricted-syntax": "off",
    "no-console": "off",
    "func-names": "off",
    "no-plusplus": "off",
    "no-use-before-define": 0,
    "comma-spacing": "off",
    "guard-for-in": "off",
    "no-return-assign": "off",
    "class-methods-use-this": "off",
    "no-throw-literal": "off",
    "no-await-in-loop": "off",
    "no-continue": "off",
    "global-require": "off"
  },
  "env": {
    "mocha": true
  }
}
